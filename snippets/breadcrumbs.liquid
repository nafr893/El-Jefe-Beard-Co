<nav class="breadcrumbs" aria-label="Breadcrumb">
  <ol class="breadcrumbs__list" id="breadcrumbs_list" >
    {%- if template.name == 'index' -%}
      <li aria-current="page" id="breadcrumb-text" style="list-style: none;" >Home</li>
    {%- endif -%}
    {%- if template.name == 'search' -%}
      <li aria-current="page">Search</li>
    {%- endif -%}
    {%- if template.name == '404' -%}
      <li aria-current="page" style="list-style: none;" >Page not found</li>
    {%- endif -%}
    <li><a href="{{ routes.root_url }}" id="breadcrumb-text" style="list-style: none;">Home/</a></li>
    {%- if collection -%}
      <li>
        <a href="{{ collection.url }}" id="breadcrumb-text">{{ collection.title }}/</a>
      </li>
    {%- elsif product.collections.size > 0 -%}
      {%- assign fallback_collection = blank -%}
      {%- for c in product.collections -%}
        {%- if c.handle != 'all' and fallback_collection == blank -%}
          {%- assign fallback_collection = c -%}
        {%- endif -%}
      {%- endfor -%}
      {%- if fallback_collection -%}
        <li>
          <a href="{{ fallback_collection.url }}" id="breadcrumb-text">{{ fallback_collection.title }}/</a>
        </li>
      {%- endif -%}
    {%- endif -%}
    {%- if template.name == 'product' -%}
      <li aria-current="page" id="breadcrumb-text" style="list-style: none;">{{ product.title }}/</li>
    {%- endif -%}
  </ol>
</nav>